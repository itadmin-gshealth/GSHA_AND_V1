<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.uploads.PrescriptionPatientFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textBrowseHeader"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:text="Out-Patient Prescription"
                android:textColor="@color/purple_700"
                android:textSize="25sp"
                android:paddingLeft="20dp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="left"
                    android:layout_margin="2dp"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/gsha_logo_red"
                    app:civ_border_color="@color/purple_700"
                    app:civ_border_width="3dp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/pres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="Good Shepherd Clinic"
                    android:textColor="@color/red"
                    android:textSize="17sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:text="Department"
                    android:layout_below="@+id/pres"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/regNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/dept"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/meds"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="20dp"
                    android:text="Medicine"
                    android:layout_below="@+id/regNo"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:scrollbars = "vertical"></TextView>

                <TextView
                    android:id="@+id/docRegNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Reg No"
                    android:layout_below="@+id/meds"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:textStyle="bold"></TextView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llPrescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">


                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtPrescription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:text="DOWNLOAD"
                    android:textSize="10sp" android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/btnGetMedicine"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtPrescription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:text="GET MEDICINE"
                    android:textSize="10sp"  android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/btnLastPrescription"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtPrescription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:text="VIEW LAST PRESCRIPTION"
                    android:textSize="10sp"  android:textStyle="bold"></Button>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>

        </LinearLayout>
    </ScrollView>

</FrameLayout>