<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatBackgroungColor"
    tools:context=".ui.services.ServicesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/divider2"
                android:layout_marginTop="40dp"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/purple_700"/>
            <TextView
                android:id="@+id/text_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TextView
                android:id="@+id/text_special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:paddingLeft="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Specialities"
                android:textColor="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/derma"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true" />
                    <TextView
                        android:id="@+id/text_derm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:text="Dermatology"
                        android:clickable="true"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/dental"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true" />
                    <TextView
                        android:id="@+id/text_dent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:text="Dentistry"
                        android:clickable="true"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gynaec"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true">
                    </ImageButton>
                    <TextView
                        android:id="@+id/text_gyn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:text="Gynaecology"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="800" />
                </LinearLayout>

            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/paeds"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_paed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="Paediatrics"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/psych"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_psy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="Psychiatrist"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gen"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_gen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="General"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TextView
                android:id="@+id/text_paramed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:paddingLeft="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Added Health Services"
                android:textColor="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pharm"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_phar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="Pharmacy"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/diag"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_diag"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="Diagnostics"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="@integer/material_motion_duration_long_2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ins"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_ins"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="Insurance"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="@integer/material_motion_duration_long_2" />
                </LinearLayout>
            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/first"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_emer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="First Aid"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <TextView
                android:id="@+id/text_personalCare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:paddingLeft="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Personal Care"
                android:textColor="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>

            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:gravity="left">>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ger"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_eld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:text="Elderly Care"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/diab"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundcorner"
                        android:adjustViewBounds="true"
                        ></ImageButton>
                    <TextView
                        android:id="@+id/text_diab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:text="Diabetic care"
                        android:textColor="@color/purple_700"
                        android:textFontWeight="400" />
                </LinearLayout>
            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp"></Space>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>