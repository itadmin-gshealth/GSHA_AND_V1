<resources>

    <style name="Widget.GSHA.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.GSHA.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomCalendarMonth" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColorPrimary">@color/amber</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/purple_700</item>
    </style>


</resources>

