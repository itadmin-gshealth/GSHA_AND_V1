<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.omif.gsha.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home"
        />

    <fragment
        android:id="@+id/navigation_services"
        android:name="com.omif.gsha.ui.services.ServicesFragment"
        android:label="@string/title_services"
        tools:layout="@layout/fragment_services"
        />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.omif.gsha.ui.messages.MessagesFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/navigation_uploads"
        android:name="com.omif.gsha.ui.uploads.UploadsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_uploads" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.omif.gsha.ui.account.AddMembersFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/navigation_signin"
        android:name="com.omif.gsha.ui.signin.SignInFragment"
        android:label="SignIn"
        tools:layout="@layout/fragment_signin" />

    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.omif.gsha.ui.signup.SignUpFragment"
        android:label="SignUp"
        tools:layout="@layout/fragment_signup" />

</navigation>